{
  "name": "Default Amazon Sort",
  "version": "1.0",
  "description": "Extension to change the default sorting method for product searches on Amazon websites.",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "https://www.amazon.cn/*", "https://www.amazon.in/*", "https://www.amazon.co.jp/*", "https://www.amazon.com.sg/*", "https://www.amazon.com.tr/*", "https://www.amazon.ae/*", "https://www.amazon.fr/*", "https://www.amazon.de/*", "https://www.amazon.it/*", "https://www.amazon.nl/*", "https://www.amazon.es/*", "https://www.amazon.uk/*", "https://www.amazon.ca/*", "https://www.amazon.com.mx/*", "https://www.amazon.com/*", "https://www.amazon.com.au/*", "https://www.amazon.com.br/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/das16.png",
      "32": "images/das32.png",
      "48": "images/das48.png",
      "128": "images/das128.png"
    }
  },
  "icons": {
    "16": "images/das16.png",
    "32": "images/das32.png",
    "48": "images/das48.png",
    "128": "images/das128.png"
  },
  "manifest_version": 2
}
