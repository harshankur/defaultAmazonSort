{
  "name": "Default Amazon Sort",
  "version": "1.0",
  "description": "Extension to change the default sorting method for product searches on Amazon websites.",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "http://*/", "https://*/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/das16.png",
      "32": "images/das32.png",
      "48": "images/das48.png",
      "128": "images/das128.png"
    }
  },
  "icons": {
    "16": "images/das16.png",
    "32": "images/das32.png",
    "48": "images/das48.png",
    "128": "images/das128.png"
  },
  "manifest_version": 2
}
